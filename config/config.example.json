{
  "agents": {
    "defaults": {
      "workspace": "~/.miniclaw/workspace",
      "restrict_to_workspace": true,
      "provider": "opencode",
      "model": "openai/gpt-5.2",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20
    }
  },
  "model_list": [
    {
      "model_name": "gpt4",
      "model": "openai/gpt-5.2",
      "api_key": "sk-your-openai-key",
      "api_base": "https://api.openai.com/v1"
    }
  ],
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "YOUR_TELEGRAM_BOT_TOKEN",
      "proxy": "",
      "allow_from": [
        "YOUR_USER_ID"
      ]
    }
  },
  "providers": {
    "opencode": {
      "base_url": "http://127.0.0.1:4096",
      "username": "opencode",
      "password_env": "OPENCODE_SERVER_PASSWORD",
      "request_timeout_seconds": 120
    }
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30
  },
  "devices": {
    "enabled": false,
    "monitor_usb": true
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  },
  "logging": {
    "format": "json",
    "level": "info",
    "add_source": false
  }
}
